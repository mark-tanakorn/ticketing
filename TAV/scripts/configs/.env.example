# ======================
# PROJECT INFO
# ======================
PROJECT_NAME=TAV Engine
VERSION=2.0.0
ENVIRONMENT=development

# ======================
# DEVELOPMENT MODE
# ======================
# ⚠️ WARNING: Set to false in production!
# When true: Bypasses authentication (first active user auto-login)
# When false: Requires JWT token authentication for all endpoints
ENABLE_DEV_MODE=true

# ======================
# BACKEND API
# ======================
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:5000","http://localhost:3000"]

# ======================
# DATABASE
# ======================
# For SQLite (Development - Default):
DATABASE_URL=sqlite:///./data/tav_engine.db
# For PostgreSQL (Production):
# DATABASE_URL=postgresql://tav_user:tav_password@localhost:5432/tav_engine
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ======================
# REDIS (Optional)
# ======================
# REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# ======================
# CELERY (Optional)
# ======================
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ======================
# SECURITY
# ======================
ENCRYPTION_KEY=your-encryption-key-here-must-be-32-bytes-change-in-production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ======================
# AI PROVIDERS (Optional - can be stored encrypted in DB)
# ======================
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# DEEPSEEK_API_KEY=your-deepseek-api-key-here
# GOOGLE_API_KEY=your-google-api-key-here

# ======================
# OAUTH (Optional - can be stored encrypted in DB)
# ======================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_TENANT_ID=common

# ======================
# STORAGE
# ======================
STORAGE_BACKEND=local
# For S3:
# STORAGE_BACKEND=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# ======================
# OBSERVABILITY
# ======================
ENABLE_METRICS=true
ENABLE_TRACING=false
LOG_LEVEL=INFO

