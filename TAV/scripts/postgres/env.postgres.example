# PostgreSQL Database Configuration
# Copy this file to .env and update the values

# ========================================
# Database Configuration
# ========================================

# PostgreSQL Connection
# Use this when running with docker-compose.postgres.yml
DATABASE_URL=postgresql://ticketing_user:ticketing_pass@localhost:5432/ticketing

# Alternative: If backend is also in Docker, use service name
# DATABASE_URL=postgresql://ticketing_user:ticketing_pass@postgres-ticketing:5432/ticketing

# Database Pool Settings (optional, has defaults)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ========================================
# Backend Configuration
# ========================================

# Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=dev-encryption-key-change-prod-32b

# Development Settings
ENABLE_DEV_MODE=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Application Info
PROJECT_NAME=TAV Engine
VERSION=1.0.0

# ========================================
# PostgreSQL Admin (pgAdmin)
# ========================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# ========================================
# CORS & Base URL (Optional - auto-detected by native script)
# ========================================
# BASE_URL=http://localhost:3000
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5000"]

